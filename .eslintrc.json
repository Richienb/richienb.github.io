{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "semi": ["error", "never"],
        "brace-style": 0,
        "max-len": 0,
        "require-jsdoc": 0
    }
}
